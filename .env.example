# Enhanced Aether-Recon OSINT Framework - Environment Configuration
# Copy this file to .env and fill in your API keys

# ============================================
# OPTIONAL API KEYS
# The framework works without these but with reduced capabilities
# All keys below have FREE tiers available
# ============================================

# Have I Been Pwned (https://haveibeenpwned.com/API/Key)
# Free tier: Requires API key for all requests
HIBP_API_KEY=

# VirusTotal (https://www.virustotal.com/gui/my-apikey)
# Free tier: 500 requests/day, 4 requests/minute
VIRUSTOTAL_API_KEY=

# Shodan (https://account.shodan.io/)
# Free tier: 100 queries/month
SHODAN_API_KEY=

# GitHub Personal Access Token (https://github.com/settings/tokens)
# Free tier: 5000 requests/hour for authenticated users
GITHUB_TOKEN=

# AlienVault OTX (https://otx.alienvault.com/api)
# Free tier: Unlimited with registration
OTX_API_KEY=

# Censys (https://censys.io/account/api)
# Free tier: 250 queries/month
CENSYS_API_ID=
CENSYS_API_SECRET=

# ============================================
# RATE LIMITING SETTINGS
# Adjust these to prevent API bans
# ============================================

RATE_LIMIT_GLOBAL=2.0
RATE_LIMIT_VIRUSTOTAL=0.25
RATE_LIMIT_SHODAN=0.2
RATE_LIMIT_GITHUB=0.5
RATE_LIMIT_HIBP=0.067

# ============================================
# MODULE TOGGLES
# Enable/disable specific modules
# ============================================

ENABLE_GEOLOCATION=true
ENABLE_SOCMINT=true
ENABLE_BREACH_INTEL=true
ENABLE_THREAT_INTEL=true
ENABLE_METADATA=true
ENABLE_HISTORICAL=true
ENABLE_SEARCH_INTEL=true

# ============================================
# ETHICAL SCANNING SETTINGS
# ============================================

# Require explicit consent before scanning
REQUIRE_CONSENT=true

# Enable audit logging for all scans
AUDIT_LOGGING=true

# ============================================
# PERFORMANCE SETTINGS
# ============================================

HTTP_TIMEOUT=10
DNS_TIMEOUT=5
MAX_WORKERS_PORTS=20
MAX_WORKERS_DIRS=10
MAX_WORKERS_SUBDOMAINS=5

# ============================================
# DATABASE
# ============================================

DB_PATH=../reporter/aether.db

# ============================================
# USER AGENT
# ============================================

USER_AGENT=Aether-Recon/2.0 (OSINT Framework)
